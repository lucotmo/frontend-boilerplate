{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "description": "Paquete de desarrollo para trabajo frontend",
  "main": "package.json",
  "keywords": [
    "frontend",
    "optimisation",
    "boilerplate",
    "toolkit",
    "starter kit"
  ],
  "scripts": {
    "scss": "node-sass -w --importer node_modules/node-sass-package-importer/dist/cli.js -o ./public/css/ ./src/scss/",
    "pug": "pug -w -P -p ./src/pug/includes/ ./src/pug/pages/ -o ./public/",
    "babel": "babel -w ./src/js/ -d ./public/js/",
    "browserify": "browserify ./src/js/script.js -d -o ./public/js/app.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "watchify": "watchify ./src/js/script.js -d -o ./public/js/app.js -t [ babelify --presets [ @babel/preset-env ] ] -v",
    "serve": "browser-sync start --server --files public --serveStatic public --reload-delay=300 --reload-debounce=500",
    "proxy": "browser-sync start --proxy localhost --files public --directory --startPath / --serveStatic / --reload-delay=300 --reload-debounce=500",
    "metalangs": "concurrently \"yarn scss\" \"yarn pug\" \"yarn watchify\"",
    "devserve": "concurrently \"yarn metalangs\" \"yarn serve\"",
    "devproxy": "concurrently \"yarn metalangs\" \"yarn proxy\"",
    "imagemin": "imagemin \"./src/images/**.+(jpg|png)\" --out-dir ./public/images/ -p=pngquant -p=jpeg-recompress",
    "webp": "imagemin \"./public/images/**.jpg\" -o ./public/images/ -p=webp",
    "svgmin": "imagemin \"./src/images/**.svg\" --out-dir ./public/images/ -p=svgo",
    "gifmin": "imagemin \"./src/images/**.gif\" -o ./public/images/ -p=gifsicle",
    "jpgresize": "magick mogrify -resize \"1024 >\" ./public/images/*.jpg",
    "pngresize": "magick mogrify -resize \"1024 >\" ./public/images/*.png",
    "statics": "node statics",
    "assets": "yarn statics && yarn imagemin && yarn webp && yarn svgmin && yarn gifmin",
    "clean": "rimraf \"./public/**\" && mkdirp ./public/images && touch ./public/index.html ./public/js/app.js ./public/css/app.css",
    "min.html": "pug -p ./src/pug/includes/ ./src/pug/pages/ -o ./public/",
    "min.js": "yarn browserify && uglifyjs ./public/js/app.js -c -o ./public/js/app.js",
    "uncss": "uncss -u uncss.json \"./public/**.html\" > ./public/css/app.un.css",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"> 5%, ie 10\" -r ./public/css/app.un.css",
    "min.css": "node-sass --output-style compressed ./public/css/app.un.css ./public/css/app.css",
    "min": "yarn min.html && yarn min.js && yarn uncss && yarn autoprefixer &&  yarn min.css && rimraf ./public/css/app.un.css",
    "build": "yarn assets && yarn min && yarn serve",
    "start": "yarn devserve"
  },
  "author": "lucotmo <lucotmo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "autoprefixer": "^9.5.0",
    "babel-cli": "^6.26.0",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "copy": "^0.3.2",
    "imagemin": "^5.2.2",
    "imagemin-cli": "^3.0.0",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-pngquant": "^5.0.0",
    "imagemin-svgo": "^5.2.1",
    "imagemin-webp": "^4.0.0",
    "materialize-css": "^1.0.0",
    "mkdirp": "^0.5.1",
    "mogrify": "^0.3.2",
    "node-sass": "^4.11.0",
    "node-sass-package-importer": "^5.3.1",
    "postcss-cli": "^6.1.2",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.3",
    "uglify-js": "^3.5.3",
    "uncss": "^0.14.1",
    "watchify": "^3.11.1"
  }
}
